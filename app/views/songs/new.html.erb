<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<br />
<%= f.label :artist_name %>
<%= f.text_field :artist_name %>
<br />

<%= f.label :genre_id %>
<%= f.select :genre_id, options_for_select(
@genres.map{|genre|  [genre.name,genre.id] })%>
<br />

<%2.times do |i|%>
<%= f.label :notes %>
<br/>
<%= text_area_tag :"song[notes][]", nil, id: "song_notes_attributes_#{i}_content" %>
<br />
<%end%>
<%= f.submit %>
<% end %>
